#include "walltime.h"

using namespace std;

void printTime( double dif1 )
{
 long int roz = 0;
 int sek = 0, min = 0, god = 0;
 
 while (++roz < dif1+1.0) { sek++; if (sek>59) { min++; sek=0; if (min>59) { god++; min=0; } } }
 
 cout << "------------------------------------------------------------" << endl
      << "Walltime: " << god << " h " << min << " m " << sek << " s  (" << fixed << setprecision(0) << dif1 << " s)" << endl
      << "------------------------------------------------------------" << endl;
}
