EXE = mpi_mcc

OBJ = mpi_mcc.o coords.o data.o complex.o rmsd.o mpidecoys.o
SRC_MPI = mpidecoys.C
SRC_CPU = mpi_mcc.C coords.C data.C complex.C rmsd.f 

CPP = g++
FC = gfortran
MPICC = mpic++

CFLAGS = -O2 -Wall -I/project/michal/apps/gsl/include/ -I.
FFLAGS = -O2 -Wall
LDFLAGS = -lm -lgsl -lgslcblas -L/project/michal/apps/gsl/lib/ 

default: $(EXE)
all: $(EXE)

$(EXE): $(OBJ)
		$(MPICC) $(LDFLAGS) -o $@ $(OBJ)
		@cp $(EXE) ../bin/
		@cp $(EXE) ~/bin/
		@cp $(EXE) ~/work/bin/
		@echo "cp $(EXE) ~/bin/"
		@echo "cp $(EXE) ~/work/bin/"

# highest priority
mpidecoys.o: mpidecoys.C
		$(MPICC) -c $<

%.o: %.f
		$(FC) $(FFLAGS) -c $<

%.o: %.C
		$(CPP) $(CFLAGS) -c $<

clean:
		@(rm -f ${EXE} ../bin/hpcmcc ${OBJ} )
